<section>
    <div class="container mt-5">

        {{#if prods}}
        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Product</p>
        <form action="/admin/update-product/{{prods._id}}" method="post" enctype="multipart/form-data">
        {{else}}
        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add Product</p>
        <form action="/admin/product" method="post" enctype="multipart/form-data">
        {{/if}}
            <div class="form-group">
                
                <input type="text" required class="form-control mt-3" id="exampleFormControlFile1" name="pname" placeholder="Name" value={{prods.pname}}>
             </div><div class="form-group">

                <input type="text" required class="form-control mt-3" id="exampleFormControlFile1" name="cat" placeholder="Category" value={{prods.cat}}>
             </div>
             <div class="form-group">

                <input type="text" required class="form-control mt-3" id="exampleFormControlFile1" name="price" placeholder="price" value={{prods.price}}>
             </div>
             <div class="form-group">

                <textarea required class="form-control mt-3" id="exampleFormControlFile1" name="description" placeholder="Description" >{{prods.description}}</textarea>
             </div>
            <div class="form-group mt-3">
                
                <label for="exampleFormControlFile1 ">Select Image</label>
                {{#if prods}}
                <img src="/product-images/{{prods._id}}.jpg" width="50px" height="auto" id="imgview"  />
                <input  type="file" name="image" class="form-control" onchange='imageView(event)' id="exampleFormControlFile1" >
                {{else}}
                <img src="/product-images/{{prods._id}}.jpg" width="50px" alt="Select Image" height="auto" id="imgview"  />
                <input required  type="file" name="image" class="form-control" onchange='imageView(event)' id="exampleFormControlFile1" >
                {{/if}}
             </div>
             <div class="row">
                {{#if prods}}
                <input type="submit" class="btn btn-secondary btn-lg btn-block mt-3 ml-auto"   value="Update Product">
                {{else}}
                <input type="submit" class="btn btn-secondary btn-lg btn-block mt-3 ml-auto"   value="Add Product">
                {{/if}}
            </div>
        </form>
    </div>
</section>

<script>
    function imageView(event){

        document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
    }
</script>