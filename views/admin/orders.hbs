<table id="orders">
  <tr> 
      <h1 style="text-align: center;">Orders Placed</h1>
  </tr>
  <tr>
    <th>Date</th>
    <th>Address</th>
    <th>Pincode</th>
    <th>Mobile</th>
    <th>Total</th>
    <th>PaymentMode</th>
    <th>Order Status</th>
    <th>Shipping Status</th>
    <th></th> 
  </tr>
{{#each orders}}
  <tr>
    <td> {{this.orderdate}}</td>
    <td> {{this.delivery.address}} </td>
    <td> {{this.delivery.pincode}} </td>
    <td> {{this.delivery.mobile}} </td>
    <td> {{this.totalamount}} </td>
    <td> {{this.paymentmethod}} </td> 
    <td> {{this.status}} </td>
    <td> {{this.shippingstatus}} </td>
    <td> <a class="btn btn-primary" href="/admin/updateorder/{{this._id}}"> Approve Order for Shipping  </td>    
  </tr>
{{/each}}
  </table>