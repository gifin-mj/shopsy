<section>
    <div class="container mt-5">
      <div class="row">
        <a href="admin/add-product" class="btn btn-info "> Add Product </a>
      </div>
        
        <table class="table mt-5">  
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each prods}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>{{this.pname}}</td>
      <td>{{this.cat}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" width="50px" height="50px" alt="qwqwe" /></td>
    </tr>{{/each}}
  </tbody>
</table>
    </div>
</section>