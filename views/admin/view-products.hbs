<section>
    <div class="container mt-5">
      <div class="row">
        <a href="/admin/product" class="btn btn-info "> Add Product </a>
      </div>
        
<table style="text-align: center ;" class="table mt-5" id="products">  
  <thead>
    <tr>
      <th >id</th>
      <th >Name</th>
      <th >Category</th>
      <th >Price</th>
      <th >Description</th>
      <th >Image</th>
      <th >Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each prods}}
    <tr>
      <td>{{this._id}}</td>
      <td>{{this.pname}}</td>
      <td>{{this.cat}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" width="50px" height="50px" alt="qwqwe" /></td>
      <td>
        <a href="/admin/product/{{this._id}}" class="btn btn-primary" >Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onClick="return confirm('Deleting {{this.pname}} Are you sure? ')">Delete</a>
      </td>
    </tr>{{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
   $(document).ready( function () {
    $('#products').DataTable();
} );
  
</script>