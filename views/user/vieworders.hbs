

<table id="orders">
  <tr> 
      <h1 style="text-align: center;">Order Summary</h1>
  </tr>
  <tr>
    <th>Date</th>
    <th>Address</th>
    <th>Pincode</th>
    <th>Mobile</th>
    <th>Total</th>
    <th>PaymentMode</th>
    <th>Status</th>
    <th></th> 
  </tr>
{{#each orders}}
  <tr>
    <td> {{this.orderdate}}</td>
    <td> {{this.delivery.address}} </td>
    <td> {{this.delivery.pincode}} </td>
    <td> {{this.delivery.mobile}} </td>
    <td> {{this.totalamount}} </td>
    <td> {{this.paymentmethod}} </td> 
    <td> {{this.status}} </td>
    <td> <a class="btn btn-primary" href="/vieworderproducts/{{this._id}}"> View products  </td>    
  </tr>
{{/each}}
  </table>