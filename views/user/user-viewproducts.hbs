<section>
    <div class="container mt-5">  
      <div class="row">
        {{#each prods}}
        <div class="col-md-3 p-3">
          <div class="card" style="width: 15rem; height: 25rem;">
            <img src="/product-images/{{this._id}}.jpg" height="250px" class="card-img-top mt-2" alt="..." />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
              <p class="card-text">{{this.price}}</p>
              <!--<a href="/add-to-cart/{{this._id}}" class="btn btn-primary">{{this.price}}</a> !-->
              <button type="submit" class="btn btn-dark" onclick="addToCart('{{this._id}}')">Add To Cart</button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
</section>
